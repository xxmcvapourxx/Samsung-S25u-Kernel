if REGULATOR

config REGULATOR_DIO8018
	tristate "DIOO DIO8018 PMIC"
	depends on I2C
	help
	  This driver controls a DIOO DIO8018 PMIC
	  via I2C bus.

config REGULATOR_DIO8018_RECOVERY
	bool "DIOO DIO8018 PMIC Recovery"
	help
	  This is a necessary property in situations
	  where the source power of PMIC may be interrupted

config DIO8018_TEST_FOR_ON_DEVICE
	tristate "KUnit test for dio8018_test"
	depends on SEC_KUNIT
	depends on REGULATOR_DIO8018
	help
	  TODO: Describe config fully.
	  If you run this test driver on device, SHOULD set this config as 'm' to build test driver modulraly.

config DIO8018_TEST_FOR_ONLY_UML
	tristate "KUnit test for dio8018_test"
	depends on SEC_KUNIT
	depends on UML
	depends on REGULATOR_DIO8018
	help
	  TODO: Describe config fully.
	  This CONFIG is recommended to set to y.
	  
endif
